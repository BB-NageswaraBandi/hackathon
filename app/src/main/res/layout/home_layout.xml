<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/home_linear_layout"
        android:layout_width="395dp"
        android:layout_height="343dp"
        android:orientation="vertical">

        <!--        <EditText
                    android:id="@+id/sku_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SKU ID" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description" />-->

        <TextView
            android:id="@+id/skuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="SKU ID"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0099FF" />

        <EditText
            android:id="@+id/homeEditText1"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/home_linear_layout"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/home_linear_layout"
            android:background="#CCCCCC"
            android:ems="8"
            android:inputType="text" />

        <TextView
            android:id="@+id/homeTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="23dp"
            android:text="SKU Description"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0099FF" />

        <TextView
            android:id="@+id/homeTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="23dp"
            android:text="1 kg Onion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0099FF" />


        <Button
            android:id="@+id/home_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeTextView4"
            android:drawableRight="@drawable/launcher" />

    </LinearLayout>

<!--    <ImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/home_linear_layout"
        android:layout_marginTop="42dp" />-->

</RelativeLayout>